{% extends "./layout.html.twig" %}

{% block title %}
    {{ parent() }}Ajouter
{% endblock %}

{% block content %}
    {% if is_granted('ROLE_REGULAR') %}
        {% for message in app.flashes('added') %}
            <div class="flash-notice alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
        {% for message in app.flashes('existing') %}
            <div class="flash-notice alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
        {{  form_start(formContact) }}
            {{ form_row(formContact.FirstName) }}
            {{ form_errors(formContact.FirstName) }}
            {{ form_row(formContact.LastName) }}
            {{ form_errors(formContact.LastName) }}
            {{ form_row(formContact.phoneNumber) }}
            {{ form_row(formContact.Email) }}
            {{ form_errors(formContact.Email) }}
            {{ form_row(formContact.position) }}
            {{ form_errors(formContact.position) }}
            {{ form_row(formContact.companie) }}
            {{ form_errors(formContact.companie) }}
            <a class="btn btn-dark" href="{{ path('_index') }}">
                Retour
            </a>
            <input type="submit" class="btn btn-dark" value="Enregistrer" />
        {{ form_end(formContact) }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('addContactForm') }}
{% endblock %}
