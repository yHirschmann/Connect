{% extends "./layout.html.twig" %}

{% block title %}
    {{ parent() }}Entreprises
{% endblock %}

{% block content %}
    <div class="col">
        <div id="companies-title" class="text-left">
            <h2>Entreprises</h2>
        </div>
    </div>
    <div class="col text-right">
        <a class="btn btn-dark" href="{{ path('_index') }}">
            Retour
        </a>
        <a class="btn btn-dark" href="{{ path('_addCompanie') }}">
            Ajouter
        </a>
    </div>
    <table data-toggle="table" data-search="true">
        <thead class="thead-dark">
        <tr class="bg-dark text-light">
            <th scope="col" data-sortable="true">Nom</th>
            <th scope="col" data-sortable="true">Ville</th>
            <th scope="col" data-sortable="true">Adresse</th>
            <th scope="col" data-sortable="true">Code Postal</th>
            <th scope="col" data-sortable="true">Chiffre d'affaire</th>
            <th scope="col" data-sortable="true">Effectif</th>
            <th scope="col" data-sortable="true">Domaine d'activit√©</th>
        </tr>
        </thead>
        <tbody>
        {% for companie in companies %}
                <tr>
                    <td scope="col">
                        <a href="{{ path('_companie', {'id': companie.Id}) }}">{{ companie.companieName() }}</a>
                    </td>
                    <td scope="col">
                        <a href="{{ path('_companie', {'id': companie.Id}) }}">{{ companie.City() }}</a>
                    </td>
                    <td scope="col">
                        <a href="{{ path('_companie', {'id': companie.Id}) }}">{{ companie.Adress() }}</a>
                    </td>
                    <td scope="col">
                        <a href="{{ path('_companie', {'id': companie.Id}) }}">{{ companie.PostalCode() }}</a>
                    </td>
                    <td scope="col">
                        <a href="{{ path('_companie', {'id': companie.Id}) }}">{{ companie.Turnover() }}</a>
                    </td>
                    <td scope="col">
                        <a href="{{ path('_companie', {'id': companie.Id}) }}">{{ companie.employees.count }}</a>
                    </td>
                    <td scope="col">
                        <a href="{{ path('_companie', {'id': companie.Id}) }}">{{ companie.type.label }}</a>
                    </td>
                </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}